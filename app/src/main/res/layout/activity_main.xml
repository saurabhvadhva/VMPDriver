<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey80"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLogout"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:background="@drawable/bg_logout"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/icon_logout" />

                    <ImageView
                        android:id="@+id/imgNoti"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:background="@drawable/bg_noti"
                        android:padding="@dimen/_7sdp"
                        android:visibility="gone"
                        android:src="@drawable/icon_noti" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:background="@drawable/bg_wa"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone"
                        android:src="@drawable/icon_call" />

                    <ImageView
                        android:id="@+id/imgLanguage"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:background="@drawable/bg_lang"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/icon_lang" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:background="@drawable/bg_speaker"
                        android:padding="@dimen/_4sdp"
                        android:visibility="gone"
                        android:src="@drawable/icon_speaker" />

                </LinearLayout>

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    >

                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgUser"
                        android:layout_centerVertical="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:text="@string/welcome"
                            android:fontFamily="@font/poppins_medium"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/colorAccent"
                            android:layout_marginTop="@dimen/_minus4sdp"
                            android:fontFamily="@font/poppins_medium"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_minus5sdp"
                            android:visibility="gone"
                            android:text="HR 26 DL 5478"
                            android:fontFamily="@font/poppins_medium"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_home1"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_22sdp"
                        android:textColor="@color/black"
                        android:text="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_30sdp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_19sdp"
                            android:textColor="@color/black"
                            android:text="@string/todays_trip"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            />

                        <ImageView
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_20sdp"
                            android:src="@drawable/icon_today_trip"/>

                    </RelativeLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvIssueCard"
                    android:layout_width="0dp"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_home2"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_22sdp"
                            android:textColor="@color/black"
                            android:text="2"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_15sdp">

                            <ImageView
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_home_issuecard"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_19sdp"
                                android:textColor="@color/black"
                                android:text="@string/issue_card"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvTopUpCard"
                    android:layout_width="0dp"
                    android:layout_weight="0.48"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_home3"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_22sdp"
                            android:textColor="@color/black"
                            android:text="3"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_bold"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_15sdp">

                            <ImageView
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_home_topup"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_19sdp"
                                android:textColor="@color/black"
                                android:text="@string/topup_card"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_border_wa"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
           >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_minus5sdp"
                android:lineSpacingExtra="@dimen/_minus5sdp"
                android:text="@string/helpline"
                android:fontFamily="@font/poppins_regular"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"
                />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@drawable/bg_wa"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/icon_call"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llAddExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/icon_terms"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:text="@string/add_operating_expense"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

    </LinearLayout>

</RelativeLayout>